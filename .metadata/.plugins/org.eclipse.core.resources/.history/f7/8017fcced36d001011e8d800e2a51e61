function idCheck(id){
	if(id==""){ /*입력하지 않았을 때*/
		alert("아이디를 입력해 주세요")
		document.regForm.id.focus();   /*html문서를 말함 --> regForm.jsp*/
	}else{
		url="idCheck.jsp?id="+id;
		window.open(url, "post", "width=300, heigh=150")
	}
}

function zipCheck(){
	url="zipCheck.jsp?check=y";
	window.open(url, "post", "toolbar=no, width=500, height=300, directories=no, status=yes, scrollbars=yes, menubar=no");
	/*띄지 않고 이어쓰기*/
}

function dongCheck(){
	if(document.zipForm.dong.value=="null"){
		alert("동 이름을 입력하세요");
		document.zipForm.dong.focus();
		return false;
	}
	document.zipForm.submit();
}

function sendAddress(zipcode,sido,gugun,dong,ri,bunji){
	var address=sido+" "+gugun+" "+dong+" "+ri+" "+bunji;
	opener.document.regForm.zipcode.value=zipcode;
	opener.document.regForm.address1.value=address;
	self.close();
}

function inputCheck(){
	if(document.regForm.id.value==""){  /*아이디를 입력하지 않았을 경우*/
		alert("아이디를 입력해 주세요.");
		document.regForm.id.focus();  /*커서를 다시 아이디로 옮겨줌*/
		return false;
	}
	
	if(document.regForm.pass.value==""){  /*비밀번호를 입력하지 않았을 경우*/
		alert("비밀번호를 입력해 주세요.");
		document.regForm.pass.focus();  /*커서를 다시 비밀번호로 옮겨줌*/
		return false;
	}
	
	if(document.regForm.repass.value==""){  /*비밀번호확인을 입력하지 않았을 경우*/
		alert("비밀번호를 입력해 주세요.");
		document.regForm.repass.focus();  /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}
	
	if(document.regForm.pass.value!=document.regForm.repass.value){  
		alert("비밀번호가 일치하지 않습니다.");
		document.regForm.repass.focus(); /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}	

	if(document.regForm.name.value==""){  /*이름을 입력하지 않았을 경우*/
		alert("이름을 입력해 주세요.");
		document.regForm.name.focus();  /*커서를 다시 이름으로 옮겨줌*/
		return false;
	}	
	
	if(document.regForm.phone1.value==""){  /*비밀번호확인을 입력하지 않았을 경우*/
		alert("통신사번호를 입력해 주세요.");
		document.regForm.phone1.focus();  /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}

	if(document.regForm.phone2.value==""){  /*비밀번호확인을 입력하지 않았을 경우*/
		alert("전화번호를 입력해 주세요.");
		document.regForm.phone2.focus();  /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}		

	if(document.regForm.phone3.value==""){  /*비밀번호확인을 입력하지 않았을 경우*/
		alert("전화번호를 입력해 주세요.");
		document.regForm.phone3.focus();  /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}		
	
	if(document.regForm.email.value==""){  /*비밀번호확인을 입력하지 않았을 경우*/
		alert("이메일을 입력해 주세요.");
		document.regForm.email.focus();  /*커서를 다시 비밀번호확인으로 옮겨줌*/
		return false;
	}			
	
	var str = document.regForm.email.value; /*하나의 변수를 만들어줌*/
	var atPos = str.indexOf('@'); /*Position 약자*/
	var atLastPos = str.lastIndexOf('@')	/*@를 기준으로 앞과 뒤로 나뉨*/
	var dotPos = 	str.indexOf('.');
	var spacePos = 	str.indexOf(' ');
	var comPos = 	str.indexOf(',');
	var eMailSize = str.length;  
	/*형식을 만들어줌*/

	if(atPos > 1 && atPos == atLastPos && dotPos > 3 && spacePos==-1 && comPos == -1 && atPos + 1 < dotPos && dotPos + 1 < eMailSize);
	else{
		alert('E_mail 주소형식이 잘못되었습니다.\n\r 다시 입력해 주세요.')
		document.regForm.email.focus();  /*포커스를 다시 이메일에 놔줌*/
		return false;
	}
	
	if(document.regForm.zipcode.value==""){  
		alert("우편번호를 입력해 주세요.");
		document.regForm.zipcode.focus();  
		return false;
	}		
	
	if(document.regForm.address1.value==""){  
		alert("주소를 입력해 주세요.");
		document.regForm.address1.focus();  
		return false;
	}		
	
	if(document.regForm.address2.value==""){  
		alert("상세주소를 입력해 주세요.");
		document.regForm.address2.focus();  
		return false;
	}				
		
	document.regForm.submit();  /*서버로 전송하는 메소드*/		
}


